{
  "name": "@app/ui",
  "version": "1.0.0",
  "description": "Video Orchestrator desktop UI - Tauri + Svelte",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:debug": "tauri build --debug",
    "msi:prepare": "node ../../scripts/prepare-msi-build.ps1",
    "msi:build": "node ../../scripts/build-msi.ps1",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "pnpm format:check && eslint src",
    "format": "prettier --write \"src/**/*.{js,ts,svelte,css}\" svelte.config.js vite.config.js tailwind.config.js",
    "format:check": "prettier --check \"src/**/*.{js,ts,svelte,css}\" svelte.config.js vite.config.js tailwind.config.js"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.0",
    "ky": "^1.13.0",
    "lucide-svelte": "^0.552.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.48.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tauri-apps/cli": "^2.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.13.0",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.43.2",
    "svelte-check": "^4.3.3",
    "svelte-eslint-parser": "^1.4.0",
    "tailwindcss": "^4.1.16",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  }
}