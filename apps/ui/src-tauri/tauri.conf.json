{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Video Orchestrator",
  "version": "1.0.0",
  "identifier": "com.videoorchestrator.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Video Orchestrator",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [],
      "dangerousDisableAssetCspModification": false
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Video",
    "shortDescription": "AI-powered vertical video creation",
    "longDescription": "Video Orchestrator is a desktop application for creating automated vertical videos (TikTok/Shorts/Reels) using AI-generated scripts, local media processing, and professional audio/video tools.",
    "resources": [
      "resources"
    ],
    "externalBin": [],
    "copyright": "Copyright (c) 2025 Video Orchestrator",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "localhost"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": ["en-US"]
      },
      "nsis": null,
      "allowDowngrades": true,
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
