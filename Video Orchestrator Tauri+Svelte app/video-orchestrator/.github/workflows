name: CI/CD Pipeline

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '16'

      - name: Install dependencies
        run: pnpm install

      - name: Run tests
        run: pnpm test:all

      - name: Build application
        run: pnpm build

      - name: Deploy to GitHub Pages
        if: github.ref == 'refs/heads/main'
        run: |
          pnpm deploy
          echo "Deployment successful!"